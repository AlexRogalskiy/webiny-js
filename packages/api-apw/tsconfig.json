{
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "__tests__/**/*.ts"
  ],
  "references": [
    {
      "path": "../api-headless-cms"
    },
    {
      "path": "../handler"
    },
    {
      "path": "../handler-graphql"
    },
    {
      "path": "../api-security"
    },
    {
      "path": "../api-i18n"
    },
    {
      "path": "../api-i18n-content"
    },
    {
      "path": "../api-i18n-ddb"
    },
    {
      "path": "../api-tenancy"
    },
    {
      "path": "../handler-aws"
    },
    {
      "path": "../plugins"
    }
  ],
  "compilerOptions": {
    "rootDirs": [
      "./src",
      "./__tests__"
    ],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@webiny/api-headless-cms/*": [
        "../api-headless-cms/src/*"
      ],
      "@webiny/api-headless-cms": [
        "../api-headless-cms/src"
      ],
      "@webiny/handler/*": [
        "../handler/src/*"
      ],
      "@webiny/handler": [
        "../handler/src"
      ],
      "@webiny/handler-graphql/*": [
        "../handler-graphql/src/*"
      ],
      "@webiny/handler-graphql": [
        "../handler-graphql/src"
      ]
    },
    "baseUrl": "."
  }
}
