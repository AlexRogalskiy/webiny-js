{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [{ "path": "../handler" }, { "path": "../handler-http" }],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/handler-http/*": ["../handler-http/src/*"],
      "@webiny/handler-http": ["../handler-http/src"]
    },
    "baseUrl": "."
  }
}
