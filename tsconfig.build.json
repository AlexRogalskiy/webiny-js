{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable"],
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {},
    "typeRoots": ["./typings", "./node_modules/@types", "@types/testing-library__cypress"],
    "plugins": [
      { "transform": "typescript-transform-paths", "useRootDirs": true },
      { "transform": "typescript-transform-paths", "useRootDirs": true, "afterDeclarations": true },
      { "transform": "@webiny/typescript-utils/transformer.ts" }
    ],
    "noUnusedParameters": true,
    "noUnusedLocals": true,

    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "incremental": true,
    "preserveWatchOutput": false,
    "emitDeclarationOnly": false,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "./scripts/**",
    "**jest**",
    "./packages/cli-plugin-deploy-pulumi",
    "./packages/cli",
    "./packages/create-webiny-project",
    "./packages/cwp-template-aws/**",
    "./packages/project-utils",
    "./packages/tracking"
  ]
}
